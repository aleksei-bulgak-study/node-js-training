{
  "name": "js-trainings",
  "version": "1.0.0",
  "description": "Emap node js training/express-js",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint ./src --ext .js,.ts",
    "lint:ts": "eslint -c .eslintrc.ts.json ./src/**/*.ts",
    "build:ts": "tsc --build --watch tsconfig.json",
    "build": "babel --extensions '.ts' ./src -d dist",
    "start": "npm run lint:ts && nodemon --exec babel-node --extensions '.ts' src/index.ts"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^17.1.0",
    "@types/uuid": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git@study:aleksei-bulgak-study/node-js-training.git"
  },
  "keywords": [
    "nodejs",
    "expressjs"
  ],
  "author": "Aleksei Bulhak <aleksei.bulgak@gmail.com>",
  "license": "MIT"
}
